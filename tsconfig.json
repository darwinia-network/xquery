{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "inlineSources": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "composite": true,
    "lib": [
      "esnext",
      "es2018",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@xquery/types":["types/src"], 
      "@xquery/types/*":["types/src/*"]
    }
  },
  "references": [
    {"path":"./packages/types/tsconfig.json"}
  ],
  "include": ["packages/node/*", "packages/types/*", "jest.config.js"],
  "exclude": ["**/node_modules/**" ],
  "typeRoots":["./node_modules/@types"]
}
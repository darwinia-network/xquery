{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2018",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "sourceMap": true,
    "declaration": true,
    "inlineSources": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "composite": true,
    "lib": [
      "esnext",
      "es2018",
      "esnext.asynciterable"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
        "@xscan/utils": ["packages/utils/src"],
        "@xscan/utils/*": ["packages/utils/src/*"]
    },
    "skipLibCheck": true
  },
  "references": [
    { "path": "packages/utils" },
    { "path": "packages/node"  },
  ],
  "include": ["packages/**/*"],
  "exclude": ["**/node_modules/**"],
  "typeRoots":["./node_modules/@types"]
}